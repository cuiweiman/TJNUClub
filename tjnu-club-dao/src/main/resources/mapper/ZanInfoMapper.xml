<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjnu.club.mapper.ZanInfoMapper">
    <resultMap id="BaseResultMap" type="com.tjnu.club.info.ZanInfo">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate"/>
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
        <result column="blog_id" jdbcType="VARCHAR" property="blogId"/>
        <result column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="is_deleted" jdbcType="BIGINT" property="isDeleted"/>
    </resultMap>

    <sql id="BaseColumn">
        id,gmt_create,gmt_modified,blog_id,user_id,is_deleted
    </sql>

    <insert id="zan">
        INSERT INTO zan_info
        <set>
            blog_id = #{blogId},
            user_id = #{userId},
            is_deleted = 0
        </set>
    </insert>

    <update id="zanCancel">
        UPDATE zan_info
        <set>
            is_deleted = UNIX_TIMESTAMP()
        </set>
        WHERE blog_id=#{blogId} AND user_id=#{userId} AND is_deleted=0
    </update>

    <select id="getZan" resultMap="BaseResultMap">
        SELECT <include refid="BaseColumn"/>
        FROM `zan_info`
        WHERE blog_id=#{blogId} AND user_id=#{userId} AND is_deleted=0
    </select>

    <select id="zanCount" resultType="java.lang.Integer">
        SELECT COUNT(id)
        FROM `zan_info`
        WHERE is_deleted=0 AND blog_id = #{blogId}
    </select>

</mapper>